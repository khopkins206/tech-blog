<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
 
  <div class="col-md-6 post-list">
    <h3>Comments:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <p>{{comment.body}}</p>
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

  <form class="form new-comment-form" style="margin: 0 auto; width: 75%">
    <div class="form-group">
      <label for="comment-body">Comment on Post:</label>
      <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>